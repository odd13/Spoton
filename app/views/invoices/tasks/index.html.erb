<h1>Invoices</h1>
  <table class="table table-sm table-hover table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
  <tbody>

<% @invoices.each do |t| %>
    <tr class='clickable-row' data-href='<%= edit_invoice_path(t) %>'>
      <td><%= t.name %></td>
      <td class='text-center'>
          <%= button_to invoice_path(t), method: :delete, data: { confirm: "You sure?" }, :class=>'btn btn-xs btn-warning' do %>
             <span class="glyphicon glyphicon-trash"></span>
         <% end %>
      </td>
    </tr>
<% end %>

</tbody>
</table>
