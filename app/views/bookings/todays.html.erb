<h1>Todays Bookings</h1>
<%= link_to "New Booking", new_booking_url %>
</br>
</br>


<% @bookings.each do |b| %>
<strong><%= b.location.name %> </strong>
	</br>
	<% if b.start_datetime == nil %>
	  <%= #link_to "Start Job", startjob_job_path(b) 
		%>
	  <%= button_to "Start", startjob_booking_path(b), :class => 'myButton', :method => :get %>
	<% else %>
	  <%= b.start_datetime.strftime("%I:%M%p") %> - <%= current_user.name.at(0) %>
	<% end %>
 ------------------ 
	<% if b.end_datetime == nil %>
	  <%= #link_to "End Job", endjob_job_path(b) 
		%>
	  <%= button_to "End", endjob_booking_path(b), :class => 'myButton', :method => :get %>
	<% else %>
	  <%= b.end_datetime.strftime("%I:%M%p") %> - <%= current_user.name.at(0) %>
	<% end %>

	</br>
        <%= link_to "delete", booking_path(b), method: :delete, data: { confirm: "You sure?" } %>
</br>
</br>
<% end %>


</br>
