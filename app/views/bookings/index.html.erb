<h2>To Invoice</h2>
<div class="list-group">
<% @completedBookings.each do |b| %>
        <a href="<%= edit_booking_path(b) %>" class="list-group-item list-group-item-action">
        <h3 class="list-group-item-heading"><%= b.location.name %></h3>
        <p class="list-group-item-text"><%= b.task.name %> :<%= b.booked_time %></p>
        <%= link_to raw('<span style="text-align:center">delete</span>'), booking_path(b), method: :delete, data: { confirm: "You sure?" } %>
        </a>
<% end %>
</div>
