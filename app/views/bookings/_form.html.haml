= semantic_form_for @booking do |f|
  = f.input :location, include_blank: false
  = f.input :task, include_blank: false
  = f.input :booked_time, as: :string,
    append: content_tag( :span, nil, class: 'glyphicon glyphicon-calendar' )

  = f.actions do
    = f.action :submit, as: :button
    = f.action :cancel, as: :link
